@page "/reports"

@if (Reports != null)
{

    <table class="table table-hover">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Description</th>
                <th>Enabled</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var report in Reports.Where(x => x.Enabled))
            {
                <tr style="cursor: pointer;" @onclick="() => GoToGenerateReport(report)">
                    <td>@report.Id</td>
                    <td>@report.Name</td>
                    <td>@report.Description</td>
                    <td>@report.Enabled</td>
                </tr>

            }
        </tbody>
    </table>
}
