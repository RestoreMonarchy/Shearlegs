@page "/reports"

@if (Reports != null)
{
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item active" aria-current="page">Reports</li>
        </ol>
    </nav>

    <table class="table table-hover">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Description</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var report in Reports.Where(x => x.Enabled))
            {
                <tr style="cursor: pointer;" @onclick="() => GoToGenerateReport(report)">
                    <td>@report.Id</td>
                    <td>@report.Name</td>
                    <td>@report.Description</td>
                </tr>

            }
        </tbody>
    </table>
}
