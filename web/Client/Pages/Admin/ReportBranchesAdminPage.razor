@page "/admin/reportbranches/{ReportId:int}"

@if (Report != null)
{
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item">Admin</li>
            <li class="breadcrumb-item"><a href="/admin/reports">Reports</a></li>
            <li class="breadcrumb-item active" aria-current="page">@Report.Name</li>
        </ol>
    </nav>

    <div class="mb-3 d-flex">
        <div>
            <h4 class="">@Report.Name</h4>
        </div>        
        <div class="ms-auto">
            <button class="btn btn-primary" @onclick="AddReportBranchAsync">Add Branch</button>
        </div>
    </div>

    <div class="bg-light p-3">
        <div class="mb-3 d-flex">
            <div class="w-50">
                <select class="form-select" @onchange="OnChangeBranchAsync">
                    @foreach (var branch in Report.Branches)
                    {
                        <option value="@branch.Id">@branch.Name</option>
                    }
                </select>
            </div>
            <div class="ms-2">
                <button class="btn btn-primary" @onclick="() => EditReportBranchAsync(Branch)">Edit @Branch.Name</button>
            </div>
        </div>

        @if (Branch != null)
        {

            <div class="card mb-3">
                <div class="card-header">
                    Current Version
                </div>
                <div class="card-body">
                    @if (Branch.Plugin != null)
                    {
                        <h5 class="card-title">@Branch.Plugin.Version</h5>
                        <p class="card-text">@Branch.Plugin.Changelog</p>
                    }
                    else
                    {
                        <p class="card-text">There isn't current plugin for this branch</p>
                    }

                    <a class="btn btn-sm btn-primary" href="/admin/reports/branches/@Branch.Id/update">Update Plugin</a>
                </div>
            </div>

            <div class="card mb-3">
                <div class="card-header">
                    Parameters
                </div>
                <div class="card-body">
                    <form class="row g-4 mb-3">
                        <div class="col-auto">
                            <input type="text" class="form-control" @bind="Parameter.Name">
                        </div>
                        <div class="col-auto">
                            <select class="form-select" @bind="Parameter.InputType">
                                <option value="checkbox">checkbox</option>
                                <option value="date">date</option>
                                <option value="text">text</option>
                                <option value="number">number</option>
                                <option value="file">file</option>
                            </select>
                        </div>
                        <div class="col-auto">
                            <div class="form-check">
                                <input class="form-check-input" type="checkbox" @bind="Parameter.IsMandatory">
                                <label class="form-check-label">
                                    Is Mandatory
                                </label>
                            </div>
                        </div>
                        <div class="col-auto">
                            <a href="javascript:void(0)" class="btn btn-primary mb-3" @onclick="AddParameterAsync">Add</a>
                        </div>
                    </form>

                    <div class="mb-3">
                        <table class="table">
                            <caption>Parameters</caption>
                            <thead>
                                <tr>
                                    <th>Name</th>
                                    <th>Input Type</th>
                                    <th>Is Mandatory</th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var parameter in Branch.Parameters)
                                {
                                    <tr>
                                        <td>@parameter.Name</td>
                                        <td>@parameter.InputType</td>
                                        <td>@parameter.IsMandatory</td>
                                        <td>
                                            <a href="javascript:void(0)" class="btn btn-danger" @onclick="() => RemoveParameterAsync(parameter)">Remove</a>
                                        </td>
                                    </tr>
                                }
                            </tbody>

                        </table>
                    </div>
                </div>
            </div>

            <div class="card mb-3">
                <div class="card-header">
                    Secret Parameters
                </div>
                <div class="card-body">
                    <form class="row g-4 mb-3">
                        <div class="col-auto">
                            <input type="text" class="form-control" @bind="Secret.Name">
                        </div>
                        <div class="col-auto">
                            <input type="text" class="form-control" @bind="Secret.Value">
                        </div>
                        <div class="col-auto">
                            <a href="javascript:void(0)" class="btn btn-primary mb-3" @onclick="AddSecretAsync">Add</a>
                        </div>
                    </form>

                    <div class="mb-3">
                        <table class="table">
                            <caption>Secret Parameters</caption>
                            <thead>
                                <tr>
                                    <th>Name</th>
                                    <th>Value</th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var secret in Branch.Secrets)
                                {
                                    <tr>
                                        <td>@secret.Name</td>
                                        <td>@secret.Value</td>
                                        <td>
                                            <a href="javascript:void(0)" class="btn btn-danger" @onclick="() => RemoveSecretAsync(secret)">Remove</a>
                                        </td>
                                    </tr>
                                }
                            </tbody>

                        </table>
                    </div>
                </div>
            </div>

            <div class="mb-3 bg-white p-3">
                <div class="mb-3">

                </div>

                <div class="mb-3">
                    
                </div>

            </div>
        }
    </div>
    

    

    <Modal @ref="Modal" T="ReportBranchModel" ModalSize="EModalSize.Large" ModelFactory="() => new ReportBranchModel() { ReportId = ReportId }" OnCreated="PostReportBranchAsync" OnUpdated="PutReportBranchAsync">
        @if (Modal != null && Modal.Model != null)
        {
            <div class="mb-3">
                <label>Name</label>
                <input @bind="@Modal.Model.Name" class="form-control" />
            </div>
            <div class="mb-3">
                <label>Description</label>
                <textarea @bind="@Modal.Model.Description" class="form-control" rows="5" />
            </div>
        }
    </Modal>
}